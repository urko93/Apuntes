<!-- app/Resources/views/layout.html.twig -->

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    	<title>
    		{% block title %}Apuntes!{% endblock %}
    	</title>
    
	    <!-- Bootstrap -->
	    {% block stylesheets %}
	    	<link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">
	    	
	    {% endblock %}
	    
		{% block IE8 %}
		    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
		    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
		{% endblock %}
		
		{% block icon %}
			<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% endblock %}
	</head>
	
	<body>
		
		{% block body %}
			{% block menu %}
				{% include 'menu.html.twig' %}
			{% endblock %}
			<div class="container">
  				{% block container %}
					<div class="row row-offcanvas row-offcanvas-right">
						<div class="col-xs-12 col-sm-9">
							<p class="pull-right visible-xs">
								<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
							</p>
							<div class="row">
						
								{% block content %}
								{% endblock %}
								
							</div><!--/row-->
						</div><!--/span-->
				
				        <div class="col-xs-6 col-sm-3 sidebar-offcanvas lineaIzquierda" id="sidebar" role="navigation">
				        	{% block menuDerecha %}
				        		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					        		<div class="list-group">
					        			<a class="list-group-item active">
					        				<p>Ãšltima vez online: </p>
					        				<p>{{ app.user.lastlogin|date('Y-m-d H:i:s') }}</p>
					        			</a>
									</div>
									<hr>
								{% endif %}
				        		<div class="list-group">
				        			<a href="http://www.ehu.es" class="list-group-item active">EHU</a>
				        			<a href="http://www.informatika.ehu.es" class="list-group-item">EHU-Informatika</a>
				        			
								</div>
								<hr>
							{% endblock %}
						</div><!--/span-->
					</div><!--/row-->
      				<hr>

		      		<footer>
		      			{% block footer %}
		        			<p>Apuntes &copy; Company 2013</p>
		        		{% endblock %}
		      		</footer>
				{% endblock %}
   			</div><!--/.container-->
		{% endblock %}
		
		{% block javascripts %}
			 <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
		    <script src="https://code.jquery.com/jquery.js"></script>
		    <!-- Include all JavaScripts, compiled by Assetic -->
		    <script src="{{ asset('/js/bootstrap.js') }}"></script>
		    <script type="text/javascript" src="/jquery.cookiesdirective.js"></script>
		{% endblock %}
		
		<div id="eantics"></div>
	<script type="text/javascript">
	// Using $(document).ready never hurts
	$(document).ready(function(){

		// Cookie setting script wrapper
		var cookieScripts = function () {
			// Internal javascript called
			console.log("Running");
		
			// Loading external javascript file
			$.cookiesDirective.loadScript({
				uri:'/external.js',
				appendTo: 'eantics'
			});
		}

		message: "hola";
		/* Call cookiesDirective, overriding any default params
		
			*** These are the defaults ***
				explicitConsent: true,
				position: 'top',
				duration: 10,
				limit: 0,
				message: null,				
				cookieScripts: null,
				privacyPolicyUri: 'privacy.html',
				scriptWrapper: function(){},	
				fontFamily: 'helvetica',
				fontColor: '#FFFFFF',
				fontSize: '13px',
				backgroundColor: '#000000',
				backgroundOpacity: '80',
				linkColor: '#CA0000'
				
		*/
		
		$.cookiesDirective({
			privacyPolicyUri: 'myprivacypolicy.html',
			explicitConsent: false,
			position : 'bottom',
			scriptWrapper: cookieScripts, 
			cookieScripts: 'Google Analytics, My Stats Ultimate ', 
			backgroundColor: '#52B54A',
			linkColor: '#ffffff'
		});
	});
	</script>

		
	</body>
</html>